@using ProniaWebNihad.ViewModels.ProductViewModels
@model ProductUpdateVM
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" id="name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input asp-for="Description" class="form-control" id="description" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input asp-for="Price" class="form-control" id="price" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="RatingCount">Rating Count</label>
                <input asp-for="RatingCount" class="form-control" id="RatingCount" placeholder="RatingCount">
                <span asp-validation-for="RatingCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MainImagePath" />
                <img src="~/assets/images/website-images/@Model.MainImagePath" width="30" height="30" />
                <label for="MainImage">Main Image</label>
                <input asp-for="MainImage" class="form-control" id="MainImage" placeholder="MainImage">
                <span asp-validation-for="MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="HoverImagePath" />
                <img src="~/assets/images/website-images/@Model.HoverImagePath" width="30" height="30" />
                <label for="HoverImage">Hover Image</label>
                <input asp-for="HoverImage" class="form-control" id="HoverImage" placeholder="HoverImage">
                <span asp-validation-for="HoverImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.ImagePath.Count; i++)
                {
                    <div class="imageDiv">

                        <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath[i]" />
                        <input type="hidden" asp-for="ImagesPathIds" value="@Model.ImagesPathIds[i]" />
                        <div class="image" style="position:relative;width:50px;height:50px;display:inline">
                            <img src="~/assets/images/website-images/@Model.ImagePath[i]" width="60" height="60" />
                            <span style="position:absolute;right:4px;top:-14px;padding:1px;background-color:red;color:white;font-size:10px;cursor:pointer" class="closeButton">X</span>

                        </div>
                    </div>
                }
                <label for="Images">Images</label>
                <input asp-for="Images" class="form-control" id="Images" placeholder="Images">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select asp-for="CategoryId" class="form-control" id="category">
                    <option value="null" disabled selected>Category</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="tag">Tag</label>
                <select asp-for="TagIds" class="form-control" id="TagsIds">
                    @foreach (var tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span asp-validation-for="TagIds" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
<script>
    const removeButtons=document.querySelectorAll(".closeButton");
    removeButtons.forEach(btn=>{
        btn.addEventListener("click",(e)=>{
            e.preventDefault();
            btn.parentElement.parentElement.remove();
        })
    })
</script>