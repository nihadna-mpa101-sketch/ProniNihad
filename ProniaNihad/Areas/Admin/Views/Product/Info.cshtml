@using ProniaWebNihad.ViewModels.ProductViewModels
@model ProductGetVM

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4>@Model.Name Details</h4>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <img src="~/assets/images/website-images/@Model.MainImagePath" class="img-fluid rounded mb-3" />
                    <img src="~/assets/images/website-images/@Model.HoverImagePath" class="img-fluid rounded mb-3" />
                </div>
                <div class="col-md-7">
                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>@Model.Price</td>
                        </tr>
                        <tr>
                            <th>Tags</th>
                            <td>
                                @foreach (var tag in Model.TagNames)
                                {
                                    <span>@tag</span>
                                    <span>,</span>
                                }

                            </td>
                        </tr>
                        <tr>
                            <th>Images</th>
                            <td>
                                @foreach (var image in Model.ImagePath)
                                {
                                    <img src="~/assets/images/website-images/@image" class="img-fluid rounded mb-3" />
                                }

                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>